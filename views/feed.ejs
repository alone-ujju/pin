<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-800 px-10 py-10 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class="card w-32">
                <div class="namespic w-38 flex items-between">
                    <div style="border-radius: 50%; width: 27%; height: 100%;" class="dp rounded-full overflow-hidden">
                        <img class="w-full h-full" src="/images/uploads/<%= elem.user.profileImage %>" alt="">
                    </div>
                    <h1 class="rounded-md text-[1vw] text-zinc-200 mb-2 ml-1 text-white"><%= elem.user.username %></h1>
                </div>
                <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden object-cover object-center">
                    <img class="w-full h-full object-cove" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
            <h5 class="mt-2 text-sm w-"><%= elem.title %></h5>
            </div>
      <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs %>
